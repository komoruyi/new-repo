<header id="top-header">
  <span class="siteName">
    <a href="/" title="Return to home page">CSE Motors</a>
  </span>

  <div id="tools">
    <% if (loggedin) { %>
      <a href="/account" title="Account Management">
        Welcome <%= client ? client.clientFirstname : "Basic" %>
      </a>
      <a title="Click to log out" href="/account/logout">Logout</a>
    <% } else { %>
      <a title="Click to log in" href="/account/login">My Account</a>
    <% } %>
  </div>

  <nav>
    <a href="/">Home</a>
    <% if (loggedin) { %>
      <!-- Optionally hide Register/Login when logged in -->
      <a href="/account">Account Management</a>
    <% } else { %>
      <a href="/account/register">Register</a>
      <a href="/account/login">Login</a>
      <a href="/account">Account Management</a>
    <% } %>
  </nav>
</header>