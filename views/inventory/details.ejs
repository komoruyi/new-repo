<h1>
    <%= vehicle.inv_year %>
        <%= vehicle.inv_make %>
            <%= vehicle.inv_model %>
</h1>

<div id="detail-container">
    <img src="<%= vehicle.inv_image %>" alt="<%= title %>" class="detail-image">

    <div id="detail-info">
        <h2>
            <%= vehicle.inv_make %>
                <%= vehicle.inv_model %> Details
        </h2>
        <p><strong>Price:</strong>
            $<%= vehicle.inv_price.toLocaleString("en-US") %>
        </p>

        <p><strong>Description:</strong></p>
        <p>
            <%= vehicle.inv_description %>
        </p>

        <p><strong>Color:</strong>
            <%= vehicle.inv_color %>
        </p>

        <p><strong>Mileage:</strong>
            <%= vehicle.inv_miles.toLocaleString() %>
        </p>

    </div>
</div>